drawing
show
	| extent height |
	firstVisible := 1.
	height := self visibleItemsCount * self itemHeight.
	pageHeight := self height asInteger.
	self hasMessage
		ifTrue: [height := height + self class itemHeight].
	titleStringMorph
		ifNotNil: [height := height max: titleStringMorph width + 30].
	extent := self class itemWidth @ height.
	self extent: extent.
	self changed